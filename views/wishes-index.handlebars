<h1>Wish List</h1>

<h3>Save the wishes you need to ask for later</h3>

<ul>
  {{#each wishes}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Wish: {{this.wish}}</p>
       <button data-wishid="{{this.id}}" class="delwish">Delete Plan!</button>
  	</li>
  {{/each}}
</ul>

<h2>Make a Wish</h2>
<form action="/" method="POST">
	<textarea type="text" name="wishes"></textarea>

	<button type="submit">Submit</button>
</form>


<h2>Update a Wish</h2>
<form id="updatewish" class="button-size">
  <select name="id">
		{{#each wishes}}
			<option value="{{this.id}}">{{this.wish}}</option>
		{{/each}}
	</select>
  <textarea type="text" name="wishes" placeholder="wish"></textarea>
  <button type="submit">Update Wish!</button>
</form>



<script type="text/javascript">
  $(".delwish").on("click", function(event) {
    var id = $(this).data("wishid");

    // Send the DELETE request.
    $.ajax("/" + id, {
      type: "DELETE"
    }).then(
      function() {
        console.log("deleted id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

  $("#updatewish").on("submit", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    var id = $("[name=id]").val().trim();

    var updatedWish = {
      plan: $("#updatewish [name=wishes]").val().trim()
    };

    // Send the PUT request.
    $.ajax("/" + id, {
      type: "PUT",
      data: updatedWish
    }).then(
      function() {
        console.log("updated id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });
</script>